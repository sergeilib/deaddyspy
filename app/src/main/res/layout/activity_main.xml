<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.a30467984.deaddyspy.MainActivity">


    <Button
        android:id="@+id/main_button_speedometr"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_button_history"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/main_button_history"
        android:layout_marginTop="88dp"
        android:onClick="startSpeedometer"
        android:background="@drawable/switch_button_bg"
        android:text="GPS"
        tools:layout_editor_absoluteX="57dp" />

    <Button
        android:id="@+id/main_button_settings"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/main_button_speedometr"
        android:layout_alignStart="@+id/main_button_speedometr"
        android:layout_centerVertical="true"
        android:onClick="startSettingsManager"
        android:text="@string/settings"
        android:background="@drawable/switch_button_bg"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="388dp" />

    <Button
        android:id="@+id/main_button_history"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="68dp"
        android:background="@drawable/switch_button_bg"
        android:onClick="showHistory"
        android:text="@string/history" />

     />
</RelativeLayout>
